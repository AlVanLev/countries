<%= form_for(@state) do |form| %>
  <%=render 'shared/error_messages', object: form.object%>

  <%= form.label :name %>
  <%= form.text_field :name, class:"form-control" %>

  <%= form.label :country_id, "Select Country" %>
  <%= form.collection_select(:country_id, @countries, :id, :name,{promp:''}, {class: 'form-control'}) %>

  <%= form.fields_for :municipalities, form.object.municipalities.active do | municipality | %>
      <br>
      <%= municipality.label :name, "Municipality" %>
      <%= municipality.text_field :name, class:"form-control" %>
      <%= municipality.check_box :_destroy %> Delete
  <% end %>
  <%= form.fields_for :municipalities, form.object.municipalities.last do | municipality | %>
      <br>
      <%= municipality.label :name, "New Municipality" %>
      <%= municipality.text_field :name, class:"form-control" %>
  <% end %>
  <br>
  <%= form.submit class:"btn btn-info btn-sm"%>
<% end %>

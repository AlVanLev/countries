<div class="modal fade" id="modal_delete_<%=municipality.id.to_s%>" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Remove municipality <%=municipality.name%></h4>
        </div>
        <div class="modal-footer" >
          <button margin-right="30%" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= link_to 'Delete', municipality, method: :delete, class:"btn btn-md btn-danger" %>
        </div>
      </div>
    </div>
  </div>

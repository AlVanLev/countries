<div class="modal fade" id="modal_delete_<%=country.id.to_s%>" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Remove country <%=country.name%></h4>
        </div>
        <div class="modal-body">
          <%states=(State.where(country_id:country.id).pluck(:name))%>
          <%if states.length > 0%>
            <p>Deleting this country will also delete these states:</p>
            <br>
            <p>
            <%states.each do |state|%>
                <%=state%><br>
            <%end%>
          </p>
            <br>
            <p>And their respective municipalities.</p>
          <%else%>
            <p>This country doesn't have states</p>
          <%end%>
        </div>
        <div class="modal-footer" >
          <button margin-right="30%" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= link_to 'Delete', country, method: :delete, class:"btn btn-md btn-danger" %>
        </div>
      </div>
    </div>
  </div>
